<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.zerolyth.puzzle.CipherDiscController">
   <Circle fill="#e8ff00fc" layoutX="300.0" layoutY="260.0" radius="225.0" stroke="TRANSPARENT" strokeType="INSIDE" />
   <Circle fill="#00b8ff" layoutX="300.0" layoutY="260.0" radius="181.0" stroke="TRANSPARENT" strokeType="INSIDE" />
   <Circle fill="WHITE" layoutX="300.0" layoutY="260.0" radius="137.0" stroke="TRANSPARENT" strokeType="INSIDE" />

    <!-- Group of Outer Letters -->
    <Pane fx:id="outerLetters" layoutY="-40.0" />

    <!-- Group of Inner Letters -->
    <Group fx:id="innerLetters" layoutY="-40.0" />

    <!-- Rotate Buttons -->
    <Button layoutX="249.0" layoutY="499.0" onAction="#rotateLeft" text="⟲">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>
    <Button layoutX="309.0" layoutY="499.0" onAction="#rotateRight" text="⟳">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Button>
   <Label layoutX="32.0" layoutY="553.0" text="Hint:">
      <font>
         <Font name="Consolas Bold" size="18.0" />
      </font>
   </Label>
   <Label fx:id="hintPlaintextLabel" layoutX="32.0" layoutY="585.0" text="&gt;">
      <font>
         <Font name="Consolas Bold" size="18.0" />
      </font>
   </Label>
   <Label fx:id="hintCiphertextLabel" layoutX="284.0" layoutY="585.0" text="&gt;">
      <font>
         <Font name="Consolas Bold" size="18.0" />
      </font>
   </Label>
   <Label layoutX="32.0" layoutY="625.0" text="Decrypt the following message:">
      <font>
         <Font name="Consolas Bold" size="18.0" />
      </font>
   </Label>
   <Label fx:id="puzzleCiphertextLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="198.0" layoutY="666.0" text="&gt;">
      <font>
         <Font name="Consolas Bold" size="18.0" />
      </font>
   </Label>
   <TextField fx:id="puzzlePlaintextInput" layoutX="136.0" layoutY="704.0" prefHeight="25.0" prefWidth="297.0" />
   <Button layoutX="243.0" layoutY="753.0" mnemonicParsing="false" onAction="#checkAnswer" text="Submit Plaintext" />

</AnchorPane>
